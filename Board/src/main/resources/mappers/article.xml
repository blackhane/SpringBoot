<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace = mapper파일의 아이디 값 -->
<mapper namespace="kr.co.board.dao.ArticleDAO">

	<select id="selectArticle" resultType="kr.co.board.vo.ArticleVO">
		SELECT * FROM `board_article` WHERE `no`=#{no};
	</select>
	<select id="selectArticles" resultType="kr.co.board.vo.ArticleVO">
		SELECT * FROM `board_article`;
	</select>
	<insert id="insertArticle">
		INSERT INTO `board_article` SET
			`title` = #{title},
			`content` = #{content},
			`file` = #{file},
			`uid` = #{uid},
			`regip` = #{regip},
			`rdate` = NOW(),
			`updatedDate` = NOW();
	</insert>
	<update id="updateArticle">
		UPDATE `board_article` SET
			`title`=#{title},
			`content`=#{content},
			`file`=#{file},
			`updatedDate`=NOW()
			WHERE `no`=#{no};
	</update>
	<select id="deleteArticle">
		DELETE FROM `board_article` WHERE `no`=#{no};
	</select>
	
</mapper>